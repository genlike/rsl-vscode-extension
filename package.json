{
    "name": "rsl-vscode-xtext",
    "displayName": "RSL",
    "description": "An example Xtext-based DSL with Sprotty diagrams for statemachines",
    "publisher": "TypeFox",
    "license": "EPL-2.0",
    "repository": {
        "type": "git",
        "url": "https://github.com/eclipse/sprotty-vscode"
    },
    "version": "0.0.5",
    "engines": {
        "vscode": "^1.46.0"
    },
    "categories": [
        "Programming Languages"
    ],
    "contributes": {
        "languages": [
            {
                "id": "rsl",
                "aliases": [
                    "rsl"
                ],
                "extensions": [
                    ".rsl"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "rsl",
                "scopeName": "source.rsl",
                "path": "./syntaxes/rsl.tmLanguage.json"
            }
        ],
        "commands": [
            {
                "command": "rsl.diagram.open",
                "title": "Open in Diagram",
                "icon": "$(symbol-structure)",
                "category": "RSL Diagram"
            },
            {
                "command": "rsl.diagram.fit",
                "title": "Fit to Screen",
                "category": "RSL Diagram"
            },
            {
                "command": "rsl.diagram.center",
                "title": "Center selection",
                "category": "RSL Diagram"
            },
            {
                "command": "rsl.diagram.delete",
                "title": "Delete selected element",
                "category": "RSL Diagram"
            },
            {
                "command": "rsl.diagram.export",
                "title": "Export diagram to SVG",
                "category": "RSL Diagram"
            }
        ],
        "menus": {
            "commandPalette": [
                {
                    "command": "rsl.diagram.open",
                    "when": "editorLangId == 'rsl'"
                },
                {
                    "command": "rsl.diagram.fit",
                    "when": "rsl-diagram-focused"
                },
                {
                    "command": "rsl.diagram.center",
                    "when": "rsl-diagram-focused"
                },
                {
                    "command": "rsl.diagram.delete",
                    "when": "rsl-diagram-focused"
                },
                {
                    "command": "rsl.diagram.export",
                    "when": "rsl-diagram-focused"
                }
            ],
            "editor/context": [
                {
                    "command": "rsl.diagram.open",
                    "when": "editorLangId == 'rsl'",
                    "group": "navigation"
                }
            ],
            "editor/title": [
                {
                    "command": "rsl.diagram.open",
                    "when": "editorLangId == 'rsl'",
                    "group": "navigation"
                }
            ],
            "explorer/context": [
                {
                    "command": "rsl.diagram.open",
                    "when": "resourceExtname == '.rsl'",
                    "group": "navigation"
                }
            ]
        },
        "keybindings": [
            {
                "key": "alt+f",
                "mac": "alt+f",
                "command": "rsl.diagram.fit",
                "when": "rsl-diagram-focused"
            },
            {
                "key": "alt+c",
                "mac": "alt+c",
                "command": "rsl.diagram.center",
                "when": "rsl-diagram-focused"
            },
            {
                "key": "alt+e",
                "mac": "alt+e",
                "command": "rsl.diagram.export",
                "when": "rsl-diagram-focused"
            },
            {
                "key": "delete",
                "mac": "delete",
                "command": "rsl.diagram.delete",
                "when": "rsl-diagram-focused"
            }
        ]
    },
    "activationEvents": [
        "onLanguage:rsl",
        "onCommand:rsl.diagram.open"
    ],
    "files": [
        "lib",
        "extension",
        "server",
        "syntaxes",
        "webview"
    ],
    "main": "./pack/rsl-extension",
    "dependencies": {
        "sprotty-vscode": "^0.1.0"
    },
    "devDependencies": {
        "@types/node": "^8.0.0",
        "@types/vscode": "1.46.0",
        "rimraf": "^2.6.3",
        "source-map-loader": "^1.0.2",
        "ts-loader": "^8.0.3",
        "tslint": "^5.11.0",
        "typescript": "3.8.3",
        "vscode-languageclient": "^5.2.1",
        "vscode-languageserver": "^5.2.1",
        "webpack": "^4.44.1",
        "webpack-cli": "^3.3.12"
    },
    "scripts": {
        "prepare": "yarn run clean && yarn run build",
        "clean": "rimraf lib pack",
        "build": "tsc && webpack --mode=development",
        "watch": "tsc -w",
        "watch:webpack": "webpack --mode=development --watch",
        "publish": "vsce publish",
        "package": "vsce package"
    }
}
